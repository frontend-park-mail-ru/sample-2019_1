<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
	<table border="1" cellpadding="0" cellspacing="0">
		<thead>
			<tr>
				<th>Email</th>
				<th>Age</th>
				<th>Score</th>
			</tr>
		</thead>
		<tbody>
			<fest:for iterate="data" index="i" value="v">
				<tr class="table__row">
					<td><fest:value>v.email</fest:value></td>
					<td><fest:value>v.age</fest:value></td>
					<td><fest:value>v.score</fest:value></td>
				</tr>
			</fest:for>
		</tbody>
	</table>
</fest:template>
